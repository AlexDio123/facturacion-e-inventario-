@model LendViewModel
<style>
    body {
        background-color: ghostwhite;
    }

    .contener {
        margin: 5%;
        background-color: aliceblue;
    }
</style>
<div class="contener">
    <div class="row orderForm">
        <form asp-controller="Lend" asp-action="LendBook" method="post" class="form-horizontal" role="form">
            <h3 class="col-md-offset-2">Tomar un libro</h3>
            @Html.HiddenFor(m => Model.Book.BookId)
            <div class="form-group">
                <label asp-for="Book.Borrower" class="col-md-2 control-label">Usuario</label>
                <div class="col-md-6">
                    @Html.DropDownListFor(m => m.Book.BorrowerId,
                                                 new SelectList(Model.Customers.Select(x => new { Value = x.CustomerId, Text = x.Name }), "Value", "Text"),
                                                 "Seleccionar usuario",
                                                 htmlAttributes: new { @class = "form-control border-input" })
                </div>
            </div>
            <div class="form-group">
                <div class="btn-group col-md-offset-2 col-md-6">
                    <input class="btn btn-default" type="submit" value="Atrás" asp-controller="Lend" asp-action="List" />
                    <input class="btn btn-primary" type="submit" value="Tomar" />
                </div>
            </div>
        </form>
    </div>
</div>