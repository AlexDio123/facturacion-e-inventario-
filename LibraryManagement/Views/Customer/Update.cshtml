@model Customer
<style>
    body {
        background-color: ghostwhite;
    }

    .arriba {
        background-color: darkturquoise;
    }

    .abajo {
        background-color: ghostwhite;
    }

        .abajo:hover {
            background-color: lightblue;
        }

    #id {
        border-top-left-radius: 7px;
    }

    #pr {
        border-top-right-radius: 7px;
    }

    .contener {
        margin: 5%;
        background-color: aliceblue;
    }
</style>
<div class="contener">
    <div class="row orderForm">
        <form asp-controller="Customer" asp-action="Update" method="post" class="form-horizontal" role="form">
            <h3 class="col-md-offset-2">Editar usuario @Model.Name</h3>
            @Html.HiddenFor(m => Model.CustomerId)
            <div class="form-group">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-2 control-label">Nombre</label>
                        <div class="col-md-6">
                            <input asp-for="Name" class="form-control" placeholder="Enter customers name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cedula" class="col-md-2 control-label"></label>
                        <div class="col-md-6">
                            <input asp-for="Cedula" class="form-control" placeholder="Ingrese su cedula" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Edad" class="col-md-2 control-label"></label>
                        <div class="col-md-6">
                            <input asp-for="Edad" class="form-control" placeholder="Ingrese su cedula" />
                            <span asp-validation-for="Edad" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                </div>
                <div class="form-group">
                    <div class="btn-group col-md-offset-2 col-md-6">
                        <input class="btn btn-default" type="submit" value="Atrás" asp-controller="Customer" asp-action="List" />
                        <input class="btn btn-primary" type="submit" value="Actualizar" />
                    </div>
                </div>
        </form>
    </div>
    </div>
