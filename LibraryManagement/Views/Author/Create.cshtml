@model CreateAuthorViewModel

<style>
    body {
        background-color: ghostwhite;
    }

    .contener {
        margin: 5%;
        background-color: aliceblue;
    }
</style>
<div class="contener">
    <div class="row orderForm">
        <form asp-controller="Author" asp-action="Create" method="post" class="form-horizontal" role="form">
            @Html.HiddenFor(x => x.Referer)
            <h3 class="col-md-offset-2">Crear un nuevo autor</h3>
            <div class="form-group">
                <label asp-for="Author.Name" class="col-md-2 control-label">Nombre</label>
                <div class="col-md-6">
                    <input asp-for="Author.Name" class="form-control" placeholder="Ingrese su cedula" />
                    <span asp-validation-for="Author.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Author.Cedula" class="col-md-2 control-label">Cedula</label>
                <div class="col-md-6">
                    <input asp-for="Author.Cedula" class="form-control" placeholder="Ingrese su cedula" />
                    <span asp-validation-for="Author.Cedula" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="btn-group col-md-offset-2 col-md-6">
                    <input class="btn btn-default" type="submit" value="Return" asp-controller="Author" asp-action="List" />
                    <input class="btn btn-primary" type="submit" value="Create" />
                </div>
            </div>
        </form>
    </div>
    </div>
