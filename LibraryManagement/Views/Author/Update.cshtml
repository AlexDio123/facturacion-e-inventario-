@model Author
<style>
    body {
        background-color: ghostwhite;
    }

    .contener {
        margin: 5%;
        background-color: aliceblue;
    }
</style>
<div class="contener">
    <div class="row orderForm">
        <form asp-controller="Author" asp-action="Update" method="post" class="form-horizontal" role="form">
            <h3 class="col-md-offset-2">Editar Autor @Model.Name</h3>
            @Html.HiddenFor(m => Model.AuthorId)
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label">Nombre</label>
                <div class="col-md-6">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="btn-group col-md-offset-2 col-md-6">
                    <input class="btn btn-default" type="submit" value="Atras" asp-controller="Author" asp-action="List" />
                    <input class="btn btn-primary" type="submit" value="Actualizar" />
                </div>
            </div>
        </form>
    </div>
    </div>
