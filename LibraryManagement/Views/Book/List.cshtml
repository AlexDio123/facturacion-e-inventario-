@model IEnumerable<Book>
<style>
    body {
        background-color: ghostwhite;
    }

    .arriba {
        background-color: darkturquoise;
    }

    .abajo {
        background-color: ghostwhite;
    }

        .abajo:hover {
            background-color: lightblue;
        }

    #id {
        border-top-left-radius: 7px;
    }

    #pr {
        border-top-right-radius: 7px;
    }

    .contener {
        margin: 5%;
        background-color: aliceblue;
    }
</style>
<div class="contener">
    <a class="btn btn-primary mt-5" style="margin: 10px" asp-controller="Book" asp-action="Create">Agregar un nuevo libro</a>
    <table class="table table-striped table-hover ">
        <thead>
            <tr class="arriba">
                <th id="id">ID</th>
                <th>Nombre</th>
                <th>Nombre de autor</th>
                <th>Precio</th>
                <th id="pr">Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Book book in Model)
            {
                <tr class="abajo">
                    <td>@book.BookId</td>
                    <td>@book.Title</td>
                    <td>@book.Author.Name</td>
                    <td>@book.Precio</td>
                    <td>
                    <div class="form-group">
                     <div class="btn-group">
                    <a class="btn btn-default" asp-controller="Book" asp-action="Update" asp-route-id="@book.BookId">Editar</a>
                    <a class="btn btn-primary" asp-area="" asp-controller="Book" asp-action="Delete" asp-route-id="@book.BookId" asp-route-authorId="@ViewBag.AuthorId">Borrar </a>
                    </div>
                    </div>
                    </td>
                  </tr>
            }
        </tbody>
    </table>
    </div>
